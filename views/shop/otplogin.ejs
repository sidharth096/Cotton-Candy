<body>
  <div role="main" class="main shop py-4 mt-5">
    <div class="container py-4 mt-5">
      <div class="row justify-content-center align-items-center ">
        <div class="col-md-6 col-lg-5 ">
          <h1 class="font-weight-bold text-5 mb-0 mt-1 text-center text-light">Cotton Candy</h1>
          <h2 class="font-weight-bold text-5 mb-0 mt-2 text-center text-light">OTP Login</h2>
          <% var msg=msg || '' ; %>
          <% if (msg) { %>
            <span class="text-danger font-weight-bold text-center ">
              <%= msg %>
            </span>
            <% } %>
      
          <form action="/checkotp" id="signup-form" method="post">
           
            
            <div class="row">
              <div class="form-group col">
                <label class="form-label text-color-dark text-3 mt-3">Mobile no
                  <span class="text-color-danger">*</span></label>
                <input id="phonenumber" type="text" value="" name="phonenumber" class="form-control form-control-lg text-4" />
              </div>
              <span class="text-danger d-none"  id="phonenumberError"></span>
            </div>
            <div class="row">
              <div class="form-group col">
                <p class="text-2 mb-2">

                  <!-- <a href="#" class="text-decoration-none">privacy policy.</a> -->
                </p>
              </div>
            </div>
            <div class="row">
              <div class="form-group col">
                <button type="submit"
                  class="btn btn-dark btn-modern w-100 text-uppercase rounded-0 font-weight-bold text-3 py-3"
                  data-loading-text="Loading...">
                  Get OTP
                </button>
              </div>
            </div>
          </form>
                    
        </div>
      </div>
    </div>
    <script>
      const loginForm = document.getElementById("signup-form");

     
      const mobile = document.getElementById("phonenumber");
    
      //   const password2 = document.getElementById("password2")

      const mobileRegex = /^\d{10}$/;
    

      loginForm.addEventListener('submit', (e) => {




        if (mobile.value === "" || mobile.value === null) {
          e.preventDefault();
          document.getElementById("phonenumberError").classList.remove('d-none');
          document.getElementById("phonenumberError").innerHTML = "Phone number must be filled!"
        } else if (!mobile.value.match(mobileRegex)) {
          e.preventDefault();
          document.getElementById("phonenumberError").classList.remove('d-none');
          document.getElementById("phonenumberError").innerHTML = "Invalid Phone Number";
        } else if (mobile.value.match(mobileRegex)) {
          document.getElementById("phonenumberError").classList.remove('d-none');
          document.getElementById("phonenumberError").innerHTML = ""
        }
       
      })
    </script>


